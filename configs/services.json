{
  "services": {
    "main": {
      "name": "Viralogic Main Application",
      "description": "Frontend, Backend, Celery, and core services",
      "compose_file": "docker-compose.production.yml",
      "env_file": ".env.production",
      "required": true,
      "health_check": "/health",
      "port": 8000
    },
    "rss": {
      "name": "RSS Service",
      "description": "RSS feed processing and content scoring",
      "compose_file": "docker-compose.rss-service.yml",
      "env_file": ".env.production",
      "required": false,
      "health_check": "/health",
      "port": 8001
    }
  },
  "deployment_groups": {
    "production": {
      "description": "Full production deployment with all services",
      "services": ["main", "rss"]
    },
    "minimal": {
      "description": "Core application only",
      "services": ["main"]
    }
  }
}
